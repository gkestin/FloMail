rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User document - allow user to read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Thread chats subcollection
      match /threadChats/{threadId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Snoozed emails subcollection
      match /snoozedEmails/{threadId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Recently unsnoozed subcollection
      match /recentlyUnsnoozed/{threadId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Settings subcollection - stores user preferences
      match /settings/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}